# =============================================================================
# Environment Variables - Container Vulnerability Scanner
# =============================================================================
# Copy this file to .env and customize values for your environment.
# Docker Compose will automatically load .env file.
# =============================================================================

# -----------------------------------------------------------------------------
# Database Configuration
# -----------------------------------------------------------------------------
POSTGRES_USER=user
POSTGRES_PASSWORD=password
POSTGRES_DB=vulnscan
DATABASE_URL=postgresql+asyncpg://user:password@db:5432/vulnscan

# -----------------------------------------------------------------------------
# Application Settings
# -----------------------------------------------------------------------------
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO
LOG_FORMAT=text

# -----------------------------------------------------------------------------
# API Configuration
# -----------------------------------------------------------------------------
API_HOST=0.0.0.0
API_PORT=8000

# -----------------------------------------------------------------------------
# Trivy Scanner Settings
# -----------------------------------------------------------------------------
TRIVY_BINARY_PATH=/usr/bin/trivy
TRIVY_CACHE_DIR=/root/.cache/trivy
TRIVY_TIMEOUT_SECONDS=300

# -----------------------------------------------------------------------------
# Worker Settings
# -----------------------------------------------------------------------------
WORKER_POLL_INTERVAL_SECONDS=5
SCAN_MAX_RETRIES=3
SCAN_CACHE_TTL_MINUTES=60

# -----------------------------------------------------------------------------
# Risk Scoring Weights
# -----------------------------------------------------------------------------
RISK_WEIGHT_CRITICAL=100
RISK_WEIGHT_HIGH=50
RISK_WEIGHT_MEDIUM=10
RISK_WEIGHT_LOW=1

# -----------------------------------------------------------------------------
# CORS Configuration
# -----------------------------------------------------------------------------
CORS_ORIGINS=["http://localhost:5173","http://localhost:3000"]

# -----------------------------------------------------------------------------
# Frontend Settings (build-time)
# -----------------------------------------------------------------------------
VITE_API_URL=http://localhost:8000
